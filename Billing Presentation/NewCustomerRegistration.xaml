<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Billing_Presentation"
        xmlns:Themes="clr-namespace:Microsoft.Windows.Themes;assembly=PresentationFramework.Aero2" x:Class="Billing_Presentation.NewCustomerRegistration"
        mc:Ignorable="d"
        Title="NewCustomerRegistration" WindowState="Maximized" Height="450" Width="800">

    <!--calendar style-->
    <Window.Resources>
        <Style x:Key="styleCalendar" TargetType="{x:Type Calendar}">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#F90" Offset="0"/>
                        <GradientStop Color="#f90" Offset="0.16"/>
                        <GradientStop Color="#FFF" Offset="0.16"/>
                        <GradientStop Color="#FFFFFFFF" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Calendar}">
                        <!--Wrapping in ViewBox will enlarge calendar of that size.-->
                        <StackPanel>
                            <Viewbox Height="250" Width="250">
                                <CalendarItem x:Name="PART_CalendarItem"
                                  Background="{TemplateBinding Background}"
                                  BorderBrush="#f90"
                                  BorderThickness="{TemplateBinding BorderThickness}"/>
                            </Viewbox>
                            <Button Content="Today's Date" Margin="0,-10,0,0" Padding="5" Click="todayDate" Background="#f90" 
                                    FontWeight="Bold" BorderBrush="#f90"/>
                        </StackPanel>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

